@model IEnumerable<PhoneDirectoryApplication.Models.Person>

@{
    ViewData["Title"] = "Contact";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box clearfix">
                <div class="table-responsive">
                    <table class="table user-list">
                        <thead>
                            <tr>
                                <th class="text-center"><span>Full Name</span></th>
                                <th class="text-center"><span>Company</span></th>
                                <th class="text-center"><span>Phone</span></th>
                                <th class="text-center"><span>Email</span></th>
                                <th class="text-center"><span>Location</span></th>
                                <th class="text-center"><span>Content</span></th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.firstName)  @Html.DisplayFor(modelItem => item.lastName)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.company)
                                    </td>
                                    <td class="text-center">
                                        <span class="label label-default">@Html.DisplayFor(modelItem => item.contactInfo.phone)</span>
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.contactInfo.email)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.contactInfo.location)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.contactInfo.infoContent)
                                    </td>
                                    <td style="width: 12%;">
                                        @Html.ActionLink("Edit", "Edit", new { id=item.id })
                                        @Html.ActionLink("Delete", "Delete", new { id=item.id })
                                    </td>
                                </tr>
                            }                               
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>